pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Instalando dependencias...'
                sh 'pip install -r requirements.txt'  // Agrega tus dependencias
            }
        }
        stage('Test') {
            steps {
                echo 'Ejecutando pruebas básicas...'
                sh 'pytest'  // Ejecuta las pruebas automáticas
            }
        }
        stage('Deploy') {
            steps {
                echo 'Desplegando el proyecto...'
                // Aquí puedes agregar comandos de despliegue (ej: AWS, Heroku, etc.)
            }
        }
    }
}
