pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Instalando dependencias...'
                bat 'pip install -r requirements.txt'  // Instalar dependencias en Windows
            }
        }
        stage('Test') {
            steps {
                echo 'Ejecutando pruebas básicas...'
                bat 'pytest'  // Ejecuta las pruebas en Windows
            }
        }
        stage('Deploy') {
            steps {
                echo 'Desplegando el proyecto...'
                // Aquí puedes agregar comandos de despliegue (ej: AWS, Heroku, etc.)
            }
        }
    }
}
